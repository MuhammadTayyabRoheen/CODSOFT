<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".QuizActivity">

    <RelativeLayout
        android:id="@+id/questionContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/question_box"
        android:padding="16dp">

        <TextView
            android:id="@+id/questionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Which planet in the Solar System is the smallest?"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"/>
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/answersGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionContainer"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:id="@+id/optionA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A. Pluto"
            android:textColor="#131313"
            android:textSize="16sp"
            android:padding="12dp"
            android:textStyle="bold"/>

        <RadioButton
            android:id="@+id/optionB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B. Earth"
            android:textColor="#090909"
            android:textSize="16sp"
            android:padding="12dp"
            android:textStyle="bold"/>

        <RadioButton
            android:id="@+id/optionC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C. Mercury"
            android:textColor="#151515"
            android:textSize="16sp"
            android:padding="12dp"
            android:textStyle="bold"/>

        <RadioButton
            android:id="@+id/optionD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D. Mars"
            android:textColor="#121111"
            android:textSize="16sp"
            android:padding="12dp"
            android:textStyle="bold"/>
    </RadioGroup>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/answersGroup"
        android:layout_centerHorizontal="true"
        android:text="SUBMIT"
        android:background="@drawable/button_background"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="12dp"/>
</RelativeLayout>
