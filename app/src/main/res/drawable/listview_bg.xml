<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1F000000" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <!-- Background layer -->
    <item android:left="1dp" android:right="1dp" android:top="2dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#68B39DDB" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>
